<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nivek.kleo.easydrivev101" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MusicPlayer"
            android:label="@string/title_activity_music_player" >
        </activity>
        <activity
            android:name=".PlayListActivity"
            android:label="@string/app_name" >

            <!--
            intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter
            -->
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".AddEmergencyNumber"
            android:label="@string/title_activity_add_emergency_number" >
        </activity>
        <activity
            android:name=".EmergencyCall"
            android:label="@string/title_activity_emergency_call" >
        </activity>
        <activity
            android:name=".ChangeBackground"
            android:label="@string/title_activity_change_background" >
        </activity>
        <activity
            android:name=".VibrationCal"
            android:label="@string/title_activity_vibration_cal"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".StopWatch"
            android:label="@string/title_activity_stop_watch" >
        </activity>
        <activity
            android:name=".TiltBall"
            android:label="@string/title_activity_tilt_ball" >
        </activity>
        <activity
            android:name=".TextMessage"
            android:label="@string/title_activity_text_message" >
        </activity>
        <activity
            android:name=".Speed"
            android:label="@string/title_activity_speed" >
        </activity>
        <activity
            android:name=".Camera"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name=".DrivingDynamics"
            android:label="@string/title_activity_driving_dynamics" >
        </activity>
    </application>

</manifest>
